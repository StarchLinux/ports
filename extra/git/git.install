post_install() {
  if ! getent group git >/dev/null; then
    groupadd --system git 
  fi
  if ! getent passwd git >/dev/null; then
    useradd --system -c 'git daemon user' -g git -d / -s /bin/bash git 
  fi
}

post_upgrade() {
  post_install $1
}

post_remove() {
  if getent passwd git >/dev/null; then
    userdel git
  fi
  if getent group git >/dev/null; then
    groupdel git
  fi
}
